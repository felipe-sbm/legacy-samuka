{
	"name": "legacy",
	"version": "0.0.1",
	"private": true,
	"description": "O melhor jogo já feito para aprender matemática do zero e avançar passo a passo, um conceito de cada vez.",
	"keywords": [
		"svelte",
		"typescript",
		"open-source"
	],
	"homepage": "https://github.com/YZhLu/legacy#readme",
	"bugs": {
		"url": "https://github.com/YZhLu/legacy/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YZhLu/legacy.git"
	},
	"license": "MIT",
	"author": "YZhLu",
	"type": "module",
	"main": "eslint.config.js",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "svelte-kit preview --port 3000",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "eslint --fix . || true",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"ci": "npm run lint && npm run build && npm run test:unit",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
    "engines": {
        "node": ">=18 <=22"
    },
	"dependencies": {
		"@inlang/paraglide-js": "^2.0.0",
		"@libsql/client": "^0.14.0",
		"@lucide/svelte": "^0.482.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"d3": "^7.9.0",
		"drizzle-orm": "^0.40.0",
		"mathjs": "^14.3.0",
		"mathlifier": "^2.0.3",
		"mathlive": "^0.104.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@fontsource/fira-mono": "^5.0.0",
		"@iconify/svelte": "^4.0.2",
		"@neoconfetti/svelte": "^2.0.0",
		"@playwright/test": "^1.49.1",
		"@skeletonlabs/skeleton": "^3.1.7",
		"@skeletonlabs/skeleton-svelte": "^1.3.1",
		"@sveltejs/adapter-vercel": "^5.0.0",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"drizzle-kit": "^0.18.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.3",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.25.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^0.2.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"overrides": {
		"cookie": "0.7.0",
		"esbuild": ">=0.25.0"
	}
}
